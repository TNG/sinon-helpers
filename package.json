{
  "name": "sinon-helpers",
  "description": "Create easily configurable sinon stubs that mimic constructors and keep track of their instances",
  "author": "Lukas Taegert <lukas.taegert@tngtech.com>",
  "license": "MIT",
  "main": "src/index.js",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "refactor",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TNG/sinon-helpers.git"
  },
  "keywords": [
    "sinon",
    "constructor",
    "stub",
    "mock",
    "spy"
  ],
  "bugs": {
    "url": "https://github.com/TNG/sinon-helpers/issues"
  },
  "homepage": "https://github.com/TNG/sinon-helpers#readme",
  "peerDependencies": {
    "sinon": ">=1.15.0"
  },
  "dependencies": {
    "fluent-arguments": ">= 1.0.6",
    "ramda": ">= 0.23.0"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "codecov": "latest",
    "husky": "latest",
    "istanbul": "~0.4.5",
    "lint-staged": "latest",
    "mocha": "~3.3.0",
    "semantic-release": "latest",
    "standard": "latest",
    "sinon": "~2.1.0",
    "validate-commit-msg": "latest"
  },
  "scripts": {
    "test": "mocha",
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test",
    "postmerge": "npm install && npm prune",
    "postrewrite": "npm install && npm prune"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
