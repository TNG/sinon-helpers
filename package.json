{
  "name": "sinon-helpers",
  "description": "Create easily configurable sinon stubs that mimic constructors and keep track of their instances",
  "author": "Lukas Taegert <lukas.taegert@tngtech.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "jsnext:main": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TNG/sinon-helpers.git"
  },
  "keywords": [
    "sinon",
    "constructor",
    "stub",
    "mock",
    "spy"
  ],
  "bugs": {
    "url": "https://github.com/TNG/sinon-helpers/issues"
  },
  "homepage": "https://github.com/TNG/sinon-helpers#readme",
  "peerDependencies": {
    "sinon": ">=1.15.0"
  },
  "dependencies": {
    "@commitlint/cli": "^5.2.0",
    "@commitlint/config-angular": "^5.1.1",
    "fluent-arguments": "^1.1.0",
    "ramda": "^0.24.0"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-ramda": "^1.2.0",
    "babel-preset-latest": "^6.24.1",
    "chai": "^4.1.0",
    "codecov": "^2.2.0",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-tree-shaking": "^1.1.1",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "prettier-standard": "^6.0.0",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^2.7.1",
    "semantic-release": "^6.3.6",
    "sinon": "^2.3.8"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "npm run build && mocha",
    "lint": "prettier-standard *.js src/**/*.js test/**/*.js",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e",
    "postcomit": "git reset",
    "prepush": "npm test",
    "postmerge": "npm install && npm prune",
    "postrewrite": "npm install && npm prune",
    "semantic-release": "npm run build && semantic-release pre && npm publish && semantic-release post"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "eslint --fix",
      "git add"
    ]
  }
}
